            logbooklist = (await httpservice.Get<List<TblLogbookMaster>>("LogbookMasters/ACT")).Where(a => (a.IsLookup == 1));
            StateHasChanged();
        }else{
            lookup = true;
        }

        StateHasChanged();
    }
    void handlesrc(string val)
    {
        logmddt.Source = val;
        if (logmddt.Source == "Calculated")
