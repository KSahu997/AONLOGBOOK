                <CardHeader>Logbook Entry</CardHeader>
                 <CardBody>
                  <EditForm Model="@logdt">
                             <Fields>
                                 <Field ColumnSize="ColumnSize.Is4.OnDesktop.Is12.OnMobile">
                                     <FieldLabel>Element</FieldLabel>
